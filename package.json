{
  "name": "elvis-lb",
  "description": "Small snack store management",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "start": "per-env",
    "start:development": "nodemon -L --exec node -r dotenv/config .",
    "start:production": "node .",
    "build": "per-env",
    "build:development": "webpack --progress --profile --colors --config webpack.config.development.js",
    "build:production": "webpack -p --progress --profile --colors --config webpack.config.production.js",
    "heroku-postbuild": "npm run build",
    "posttest": "npm run lint && nsp check",
    "create-lb-tables": "per-env",
    "create-lb-tables:development": "node -r dotenv/config server/scripts/create-lb-tables.js",
    "create-lb-tables:production": "node server/scripts/create-lb-tables.js",
    "create-test-data": "per-env",
    "create-test-data:development": "node -r dotenv/config server/scripts/create-test-data.js",
    "create-test-data:production": "node server/scripts/create-test-data.js"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "css-loader": "^0.28.4",
    "helmet": "^1.3.0",
    "loopback": "^3.0.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^4.0.0",
    "loopback-connector-postgresql": "^3.0.2",
    "per-env": "^1.0.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^2.0.0",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.3"
  },
  "devDependencies": {
    "dotenv": "^4.0.0",
    "eslint": "^3.17.1",
    "eslint-config-loopback": "^8.0.0",
    "nodemon": "^1.11.0",
    "nsp": "^2.1.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/j-burgos/elvis"
  },
  "license": "MIT"
}
