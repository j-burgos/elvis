{
  "name": "Product",
  "plural": "products",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "stock": {
      "type": "number",
      "required": true
    },
    "price": {
      "type": "number",
      "required": true,
      "postgresql": {
        "dataType": "decimal",
        "dataPrecision": 10,
        "dataScale": 2
      }
    }
  },
  "validations": [],
  "relations": {
    "purchases": {
      "type": "hasMany",
      "model": "Purchase",
      "foreignKey": "productId"
    },
    "likes": {
      "type": "hasAndBelongsToMany",
      "model": "user",
      "foreignKey": "productId"
    }
  },
  "acls": [
  ],
  "methods": {
    "prototype.update": {
      "description": "Updates product attributes",
      "http": { "path":"/", "verb": "patch" },
      "accepts": [
        {"arg": "options", "type": "object", "http": "optionsFromRequest"},
        {"arg": "data", "type": "object", "required": "true", "http": {"source": "body"}}
      ],
      "returns": { "arg": "data", "type": "Product", "root": true}
    },
    "prototype.purchase": {
      "description": "Creates a customer purchase",
      "http": { "path":"/purchases", "verb": "post" },
      "accepts": [
        {"arg": "options", "type": "object", "http": "optionsFromRequest"},
        {"arg": "data", "type": "Purchase", "required": "true", "http": {"source": "body"}}
      ],
      "returns": { "arg": "data", "type": "Purchase", "root": true}
    },
    "prototype.like": {
      "description": "Likes a product",
      "http": { "path":"/likes", "verb": "post" },
      "accepts": [
        {"arg": "options", "type": "object", "http": "optionsFromRequest"}
      ],
      "returns": { "arg": "product", "type": "Product", "root": "true"}
    },
    "prototype.dislike": {
      "description": "Dislikes a product",
      "http": { "path":"/likes", "verb": "delete" },
      "accepts": [
        {"arg": "options", "type": "object", "http": "optionsFromRequest"}
      ],
      "returns": { "arg": "product", "type": "Product", "root": "true"}
    }
  }
}
