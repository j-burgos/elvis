{
  "name": "Product",
  "plural": "products",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "stock": {
      "type": "number",
      "required": true
    },
    "price": {
      "type": "number",
      "required": true,
      "postgresql": {
        "dataType": "decimal",
        "dataPrecision": 10,
        "dataScale": 2
      }
    }
  },
  "validations": [],
  "relations": {
    "orders": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "productId",
      "through": "Inventory"
    },
    "likes": {
      "type": "hasAndBelongsToMany",
      "model": "user",
      "foreignKey": "productId"
    }
  },
  "acls": [
  ],
  "methods": {
    "prototype.buy": {
      "description": "Creates an order for a customer",
      "http": { "path":"/buy", "verb": "post" },
      "accepts": [
        {"arg": "options", "type": "object", "http": "optionsFromRequest"},
        {"arg": "quantity", "type": "number", "required": true, "http": { "source": "body" }}
      ],
      "returns": { "arg": "data", "type": "Inventory", "root": true}
    },
    "prototype.like": {
      "description": "Likes a product",
      "http": { "path":"/like", "verb": "post" },
      "accepts": [
        {"arg": "options", "type": "object", "http": "optionsFromRequest"}
      ],
      "returns": { "arg": "product", "type": "Product", "root": true}
    },
    "prototype.dislike": {
      "description": "Dislikes a product",
      "http": { "path":"/like", "verb": "delete" },
      "accepts": [
        {"arg": "options", "type": "object", "http": "optionsFromRequest"}
      ],
      "returns": { "arg": "product", "type": "Product", "root": true}
    }
  }
}
